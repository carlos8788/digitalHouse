<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

  <body>
    <!-- Navbar (sit on top) -->
    <%- include('partials/navbar') %>


      <!-- Header -->
      <%- include('partials/header', {image:"header.jpg"}) %>

        <!-- Page content -->
        <div class="ps-content">

          <!-- Menu Section -->
          <div class="ps-row ps-padding-64" id="menu">
            <div class="ps-col l6 ps-padding-large">
              <% if (menu) { %>
                <h1 class="ps-center">
                  <%= menu.titulo %>
                </h1>
                <br />
                <h4>
                  <%= menu.descripcion %>
                </h4>
                <p class="ps-text-grey">
                  <%= menu.precio %>
                </p>



            </div>

            <div class="ps-col l6 ps-padding-large ps-img-menu">
              <img src="/images/<%= menu.imagen %>" class="ps-round ps-image ps-opacity-min" alt="Menu" />
            </div>
          </div>
          <% } else { %>
            <h2>
              <%= menuNotFound %>
            </h2>
            <% } %>
              <!-- Footer -->
              <%- include('partials/footer') %>
        </div>
  </body>

</html>