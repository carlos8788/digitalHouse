<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>

<body>
  <!-- Navbar (sit on top) -->
  <%- include('partials/navbar') %>

    <!-- Header -->
    <%- include('partials/header', {image:"header.jpg"}) %>

      <!-- Page content -->
      <div class="ps-content">
        <!-- About Section -->
        <%- include('partials/about') %>

        <hr />
        <!-- Menu Section -->
        <div class="ps-row ps-padding-64" id="menu">
          <div class="ps-col l6 ps-padding-large">
            <h1 class="ps-center">Nuentro Menu</h1>
            <br />
            <% products.forEach(producto => { %>
              <a href="/menu-detail/<%= producto.id %>#menu" style="text-decoration: none;"><h4><%= producto.titulo %></h4></a>
              <p class="ps-text-grey">
                  <%= producto.descripcion %> <%= producto.precio %>
              </p>
              
              <br />
          <% }) %>
          </div>

          <div class="ps-col l6 ps-padding-large ps-img-menu">
            <img src="/images/menu.jpg" class="ps-round ps-image ps-opacity-min" alt="Menu" />
          </div>
        </div>

        <!-- Footer -->
        <%- include('partials/footer') %>
      </div>
</body>

</html>